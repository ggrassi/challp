<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:padding="2dip">

	<ImageView android:id="@+id/status_icon"
		android:layout_width="wrap_content" android:layout_marginRight="6dip" android:src="@drawable/icon" android:layout_height="match_parent">
	</ImageView>

	<LinearLayout android:orientation="vertical"
		android:layout_width="0dip" android:layout_weight="1" android:layout_height="match_parent">

		<TextView android:id="@+id/list_parkname"
			android:layout_width="fill_parent" android:gravity="center_vertical" android:textColor="#FFFFFF"
			android:text="getName" android:singleLine="true" android:layout_height="wrap_content" android:layout_gravity="top" android:textSize="16dp" android:layout_marginBottom="2dp">
		</TextView>

		<TextView android:id="@+id/list_info" android:layout_width="fill_parent"
			android:gravity="center_vertical"
			android:textColor="#FFFFFF" android:text="getDistance" android:textSize="10dp"
			android:singleLine="true" android:layout_gravity="top" android:layout_height="wrap_content" android:layout_marginBottom="3dp">
		</TextView>

		<TextView android:id="@+id/list_date" android:layout_width="fill_parent"
			android:gravity="center_vertical"
			android:textColor="#FFFFFF" android:text="getCreationDate" android:singleLine="true" android:layout_gravity="top" android:layout_height="wrap_content" android:textSize="8dp">
		</TextView>

	</LinearLayout>

</LinearLayout>